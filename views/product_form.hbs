
      <!--**********************************
            Content body start
        ***********************************-->
      <div class="content-body">
        <div class="container-fluid">
          <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
              <div class="welcome-text">
                <h4>Update a product</h4>
              </div>
            </div>
          </div>
          <button type="button" class="btn btn-danger">Remove <span class="btn-icon-right"><i
                                            class="fa fa-close"></i></span>
                                </button>
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-xl-3">
                      <!-- Tab panes -->
                      <div class="tab-content">
                        <div
                          role="tabpanel"
                          class="tab-pane fade show active"
                          id="first"
                        >
                          <img
                            class="img-fluid"
                            src={{product.image.[0]}}
                            alt=""
                          />
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="second">
                          <img
                            class="img-fluid"
                            src={{product.image.[1]}}
                            alt=""
                          />
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="third">
                          <img
                            class="img-fluid"
                            src={{product.image.[2]}}
                            alt=""
                          />
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="for">
                          <img
                            class="img-fluid"
                            src={{product.image.[3]}}
                            alt=""
                          />
                        </div>
                      </div>
                      <div
                        class="
                          tab-slide-content
                          new-arrival-product
                          mb-4 mb-xl-0
                        "
                      >
                        <!-- Nav tabs -->
                        <ul class="nav slide-item-list mt-3" role="tablist">
                          <li role="presentation" class="show">
                            <a href="#first" role="tab" data-toggle="tab">
                              <img
                                class="img-fluid"
                                src={{product.image.[0]}}
                                alt=""
                                width="50"
                              />
                            </a>
                          </li>
                          <li role="presentation">
                            <a href="#second" role="tab" data-toggle="tab"
                              ><img
                                class="img-fluid"
                                src={{product.image.[1]}}
                                alt=""
                                width="50"
                            /></a>
                          </li>
                          <li role="presentation">
                            <a href="#third" role="tab" data-toggle="tab"
                              ><img
                                class="img-fluid"
                                src={{product.image.[2]}}
                                alt=""
                                width="50"
                            /></a>
                          </li>
                          <li role="presentation">
                            <a href="#for" role="tab" data-toggle="tab"
                              ><img
                                class="img-fluid"
                                src={{product.image.[3]}}
                                alt=""
                                width="50"
                            /></a>
                          </li>
                        </ul>
                      </div>
                    </div>
                    <!--Tab slider End-->
                    <div class="col-xl-9 col-sm-12">
                      <div class="product-detail-content">
                        <!--Product details-->
                        <div class="new-arrival-content pr">
                          <h4>{{product.name}}</h4>

                          <p class="price">${{product.price}}</p>
                          <p>
                            Availability:
                            <span class="item">
                              {{product.availability}} </span>
                          </p>

                          <p>Category <span class="item">{{product.category}}</span></p>
                    <p>Brand: <span class="item">{{product.brand}}</span></p>
                    <p>Gender: <span class="item">{{product.gender}}</span></p>
                    <p>Sale: <span class="item">{{product.sale}}%</span></p>
                    <p>Weight: <span class="item">{{product.weight}}g</span></p>
                    <p>Dimension: <span class="item">{{product.dimensions}}</span></p>
                    <p>Material: <span class="item">{{product.materials}}</span></p>
                    <p class="text-content">
                      {{product.description}}
                    </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-6 col-lg-12">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title">Product</h4>
                </div>
                <div class="card-body">
                  <div class="basic-form">
                    <form>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="name" value="{{product.name}}" />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Price</label>
                        <div class="col-sm-10">
                          <input
                            type="number"
                            class="form-control"
                            id="price"
                            value={{product.price}}
                          />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Availability</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="availability" value="{{product.availability}}" />
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                          <input
                            type="text"
                            class="form-control"
                            id="category"
                            value="{{product.category}}"
                          />
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Brand</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="brand"  value="{{product.brand}}"/>
                        </div>
                      </div>
                      
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Gender</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="gender" value="{{product.gender}}" />
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Sale</label>
                        <div class="col-sm-10">
                          <input type="number" class="form-control" id="sale" value={{product.sale}} />
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Weight</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="weight"  value="{{product.weight}}"/>
                        </div>
                      </div>
                      
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Dimension</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="gender" value="{{product.dimensions}}" />
                        </div>
                      </div>

                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Material</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" id="sale" value="{{product.materials}}" />
                        </div>
                      </div>


                      <label class="col-sm-2 col-form-label">Description</label>
                      <div class="form-group">
                        <textarea
                          class="form-control"
                          rows="4"
                          id="description"
                          
                        >{{product.description}}</textarea>
                      </div>

                      
                      <label class="col-sm-6 col-form-label"
                        >Images Link(Delete in here to delete in database)</label
                      >
                      <div class="form-group">
                        <textarea
                          class="form-control"
                          rows="4"
                          id="image-link"
                        >{{product.image.[0]}} "\n"  {{product.image.[1]}} "\n" {{product.image.[2]}} "\n" {{product.image.[3]}}</textarea>
                      </div>
                      
                      <div class="input-group">
                        
                        <div class="input-group-append">
                          <input
                            class="btn btn-primary"
                            type="submit"
                            value="Update"
                          />
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
	</div>
      <!--**********************************
            Content body end
        ***********************************-->
