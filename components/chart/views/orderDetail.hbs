<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
  <div class="container-fluid">
    <!-- row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="profile card card-body px-3 pt-3 pb-0">
          <div class="profile-head">
            <div class="photo-content">
              <div class="cover-photo"></div>
            </div>
            <div class="profile-info">
              <div class="profile-photo">
                <img src="https://www.nhanshiphang.vn/wp-content/uploads/2017/01/shopping21.jpg"
                  class="img-fluid rounded-circle" alt="" />
              </div>
              <div class="profile-details">



                <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
                  rel="stylesheet" />

                <div class="page-content container">
                  <div class="page-header text-blue-d2">
                    <h1 class="page-title text-secondary-d1">
                      ORDER
                      <small class="page-info">
                        <i class="fa fa-angle-double-right text-80"></i>
                        ID: {{order._id}}
                      </small>
                    </h1>
                  </div>

                  <div class="container px-0">
                    <div class="row mt-4">
                      <div class="col-12 col-lg-10 offset-lg-1">
                        <div class="row">
                          <div class="col-12">

                          </div>
                        </div>
                        <!-- .row -->

                        <hr class="row brc-default-l1 mx-n1 mb-4" />

                        <div class="row">
                          <div class="col-sm-6">
                            <div>
                              <span class="text-sm text-grey-m2 align-middle">Customer:</span>
                              <span class="text-600 text-110 text-blue align-middle">{{order.username}}</span>
                            </div>
                            <div class="text-grey-m2">
                              <div class="my-1">
                                User ID: {{order.userid}}
                              </div>
                              <div class="my-1">
                                Address: {{order.address}}
                              </div>
                              <div class="my-1"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> <b
                                  class="text-600">{{order.phone}}</b></div>
                            </div>
                          </div>
                          <!-- /.col -->

                          <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                            <hr class="d-sm-none" />
                            <div class="text-grey-m2">
                              <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                Order
                              </div>

                              <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span
                                  class="text-600 text-90">Date:</span>{{order.DateOfPurchase}}</div>

                              <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span
                                  class="text-600 text-90">Status:</span> <span
                                  class="badge badge-warning badge-pill px-25">{{order.status}}</span></div>
                            </div>
                          </div>
                          <!-- /.col -->
                        </div>

                        <div class="mt-4">


                          <div class="table-responsive">
                            <table class="table table-striped table-borderless border-0 border-b-2 brc-default-l1">
                              <thead class="bg-none bgc-default-tp1">
                                <tr class="text-white">
                                  <th style="color:black">Name</th>
                                  <th style="color:black">Quantity</th>
                                  <th style="color:black">Unit Price</th>
                                  <th width="140" style="color:black">Amount</th>
                                </tr>
                              </thead>

                              <tbody class="text-95 text-secondary-d3">
                                <tr></tr>
                                {{#each order.item}}
                                <tr>
                                  <td>{{productName}}</td>
                                  <td>{{quantity}}</td>
                                  <td class="text-95">${{price}}</td>
                                  <td class="text-secondary-d2">${{subtotal}}</td>
                                </tr>
                                {{/each}}
                              </tbody>
                            </table>
                          </div>


                          <div class="row mt-3">
                            <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                              SHOPPER
                            </div>

                            <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                              <div class="row my-2">
                                <div class="col-7 text-right">
                                  Shipping Fee:
                                </div>
                                <div class="col-5">
                                  <span class="text-120 text-secondary-d1">${{order.shippingFee}}</span>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="row my-2 align-items-center bgc-primary-l3 p-2">
                                <div class="col-7 text-right">
                                    Total Amount
                                </div>
                                <div class="col-5">
                                    <span class="text-150 text-success-d3 opacity-2">${{order.total}}</span>
                                </div>
                            </div>
                          <hr />

                          <div>
                            <span class="text-secondary-d1 text-105">Thank you for your business</span>
                            <a href="/statistic/order?page=1" class="btn btn-info btn-bold px-4 float-right mt-3 mt-lg-0">Back</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>
<!--**********************************
            Content body end
        ***********************************-->