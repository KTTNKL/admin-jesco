<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

<div id="chartContent">
    <canvas id="myChart"></canvas>
</div>
<script>
var xValues = ["Italy", "France", "Spain", "USA", "Argentina"];
var yValues = [55, 49, 44, 24, 24];
var barColors = ["red", "green","blue","orange", "white"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {
        display: false,
    },
    title: {
      display: true,
      text: "World Wine Production 2018",
      fontSize: 30,
      fontColor: "red"
    },
    scales: {
        yAxes: [{
            ticks: {
                fontSize: 15,
                suggestedMin: 0,
                suggestedMax: 100
            }
        }],
        xAxes: [{
            ticks: {
                fontSize: 15
            }
        }]
    }
  }
});
</script>
