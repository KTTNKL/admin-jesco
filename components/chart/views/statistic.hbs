<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

<div id="chartContent">
    <canvas id="myChart"></canvas>
</div>
<script>
var xValues = [];
{{#each Xaxist}}
var day = {{day}};
var month = {{month}};
  xValues.push(day.toString() + "/" + month.toString());
{{/each}}
var yValues =[{{statisticByDay}}];
var barColors = ["red", "green","blue","orange", "white","pink","black"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {
        display: false,
    },
    title: {
      display: true,
      text: "The Last 7 Days Bills",
      fontSize: 30,
      fontColor: "red"
    },
    scales: {
        yAxes: [{
            ticks: {
                fontSize: 15,
                suggestedMin: 0
            }
        }],
        xAxes: [{
            ticks: {
                fontSize: 15
            }
        }]
    }
  }
});
</script>
